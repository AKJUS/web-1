{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "alwaysStrict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": false,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
