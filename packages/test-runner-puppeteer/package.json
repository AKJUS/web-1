{
  "name": "@web/test-runner-puppeteer",
  "version": "0.14.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "Puppeteer browser launcher for Web Test Runner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner-puppeteer"
  },
  "author": "modern-web",
  "homepage": "https://github.com/modernweb-dev/web/tree/master/packages/test-runner-puppeteer",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha test/**/*.test.ts --require ts-node/register",
    "test:watch": "mocha test/**/*.test.ts --require ts-node/register --watch --watch-files src,test"
  },
  "files": [
    "*.d.ts",
    "*.js",
    "*.mjs",
    "dist",
    "src"
  ],
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "puppeteer",
    "browser",
    "launcher"
  ],
  "dependencies": {
    "@web/test-runner-chrome": "^0.14.4",
    "@web/test-runner-core": "^0.12.0",
    "puppeteer": "^20.0.0"
  },
  "devDependencies": {
    "@web/test-runner-mocha": "^0.8.2",
    "puppeteer-core": "^20.0.0"
  }
}
